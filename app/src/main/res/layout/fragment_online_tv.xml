<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/cctv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_db_main_card_half"
                android:layout_marginLeft="@dimen/margin_db_main_card"
                android:layout_marginRight="@dimen/margin_db_main_card"
                android:layout_marginTop="@dimen/margin_db_main_card"
                android:layout_weight="1"
                android:background="@drawable/bg_db_carton"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:padding="15dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_cctv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="央视频道"
                    android:textColor="@drawable/normal_text_color_selecter"
                    android:textSize="35sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weishi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_db_main_card_half"
                android:layout_marginLeft="@dimen/margin_db_main_card"
                android:layout_marginRight="@dimen/margin_db_main_card"
                android:layout_marginTop="@dimen/margin_db_main_card"
                android:layout_weight="1"
                android:background="@drawable/bg_db_zongyi"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:padding="15dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_weishi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卫视频道"
                    android:textColor="@drawable/normal_text_color_selecter"
                    android:textSize="35sp"
                    android:visibility="gone" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/local"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_db_main_card"
                android:layout_marginLeft="@dimen/margin_db_main_card"
                android:layout_marginRight="@dimen/margin_db_main_card"
                android:layout_marginTop="@dimen/margin_db_main_card_half"
                android:layout_weight="1"
                android:background="@drawable/bg_db_tv"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:padding="15dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_local" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本地频道"
                    android:textColor="@drawable/normal_text_color_selecter"
                    android:textSize="35sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_db_main_card"
                android:layout_marginLeft="@dimen/margin_db_main_card"
                android:layout_marginRight="@dimen/margin_db_main_card"
                android:layout_marginTop="@dimen/margin_db_main_card_half"
                android:layout_weight="1"
                android:background="@drawable/bg_db_movie"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:padding="15dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_other" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他频道"
                    android:textColor="@drawable/normal_text_color_selecter"
                    android:textSize="35sp"
                    android:visibility="gone" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <com.open.androidtvwidget.view.MainUpView
        android:id="@+id/mainUpView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>